<div class="card card-body p-3">
    {{ form_start(form) }}
    <h3 class="form-title card-title mb-3 d-flex justify-content-between">
        <span>{% block title %}{% endblock %}</span>
    </h3>
    {% block form_body %}
    {% block start %}{% endblock %}
    {% for child in form %}
        {% if not child.rendered %}
            {% if not (do_not_render is defined and child in do_not_render) %}
                {{ form_row(child) }}
            {% endif %}
        {% endif %}
    {% endfor %}

    {% block end %}{% endblock %}
    {{ form_rest(form) }}
    {% endblock %}
    {{ form_end(form) }}
</div>