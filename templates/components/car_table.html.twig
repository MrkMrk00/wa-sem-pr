<table class="table table-hover">
    <thead>
    <tr>
        <td>Name</td>
        <td>Generation</td>
        <td>Manufactured</td>
        <td>Driven axle</td>
        <td>Seat count</td>
    </tr>
    </thead>
    <tbody>
    {% for car in cars %}
        <tr data-href="{{ path('details.car', {'id': car.id}) }}">
            <td>{{ car.name }}</td>
            <td>{% if car.generation %}{{ car.generation }}{% endif %}</td>
            <td>{{ car.manufactured }}</td>
            <td>{{ car.drivenAxle }}</td>
            <td>{{ car.seatCount }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>